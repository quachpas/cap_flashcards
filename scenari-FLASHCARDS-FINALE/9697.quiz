	<op:mcqSur xmlns:op="utc.fr:ics/opale3" xmlns:sp="http://www.utc.fr/ics/scenari/v3/primitive">
		<op:exeM>
			<sp:themeLycee>#phys-obs-caracpropond-effdopl-</sp:themeLycee>
			<sp:themeLicence>#phys-ondes-</sp:themeLicence>
