			<sc:choice solution="unchecked">
				<sc:choiceLabel>
					<op:txt>
						<sc:para xml:space="preserve">
			  <sc:textLeaf role="mathtex">  \frac{1}{10} </sc:textLeaf>
		</sc:para>
					</op:txt>
